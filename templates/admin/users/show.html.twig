{% extends '/admin/baseAdmin.html.twig' %}

{% block body %}

    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                    <a href="{{ path('users_index') }}" class="mr-5"><i class="fas fa-hand-point-left fa-3x"></i></a>
                    <a href="{{ path('users_edit', {'id': user.id}) }}" class="mt-5"><i class="far fa-edit fa-3x pr-3"></i></a>
                <div class="row mt-5 justify-content-center">
                    <div class="col-md-2 align-self-center">
                        <h1 class="title-1">{{ user.firstName }} {{ user.lastName }}</h1>
                    </div>
                    <div class="col-md-3">
                        {% if user.picture is not empty %}
                            <img width="150" src="/images/users/{{ user.picture }}" alt="" class="rounded-circle border border-white">
                        {% endif %}
                    </div>
                    </div>
                </div>
                <div class="row m-t-25">
                    <div class="col-lg-12">
                        <div class="table--no-card m-b-30">
                            <table class="table table table-bordered table-striped table-hover">
                                <tbody>
                                    <th>Adresse</th>
                                    <td>{{ user.userAdress }}</td>
                                </tr>
                                <tr>
                                    <th>Téléphone maison</th>
                                    <td>{{ user.phoneHouse }}</td>
                                </tr>
                                <tr>
                                    <th>Téléphone mobile</th>
                                    <td>0{{ user.phoneMobil }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Cotisations</th>
                                    <td>{{ user.contributions }}</td>
                                </tr>
                                <tr>
                                    <th>Newsletters</th>
                                    <td>{{ user.newsletters }}</td>
                                </tr>
                                <tr>
                                    <th>Date de création</th>
                                    <td>{{ user.createDate ? user.createDate|date('d/m/Y') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date de naissance</th>
                                    <td>{{ user.birthDate ? user.birthDate|date('d/m/Y') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Assurance</th>
                                    <td>{{ user.insurance }}</td>
                                </tr>
                                <tr>
                                    <th>Numéro d'assurance</th>
                                    <td>{{ user.numInsurance }}</td>
                                </tr>
                                <tr>
                                    <th>Numéro des chèques</th>
                                    <td>{{ user.numberCheck }}</td>
                                </tr>
                                <tr>
                                    <th>Nom du médecin</th>
                                    <td>{{ user.doctorName }}</td>
                                </tr>
                                <tr>
                                    <th>Numéro mobile du médecin</th>
                                    <td>{{ user.doctorPhone }}</td>
                                </tr>
                                <tr>
                                    <th>Adresse du médecin</th>
                                    <td>{{ user.doctorAdress }}</td>
                                </tr>
                                <tr>
                                    <th>Téléphone du responsable du mineur</th>
                                    <td>{{ user.minorPhone }}</td>
                                </tr>
                                <tr>
                                    <th>Classe du mineur</th>
                                    <td>{{ user.minorClass }}</td>
                                </tr>
                                <tr>
                                    <th>Nom du responsable du mineur</th>
                                    <td>{{ user.minorNameResponsable }}</td>
                                </tr>
                                <tr>
                                    <th>Rôle</th>
                                        <td>
                                        {% for role in user.roles %}
                                             {{ role }},
                                        {% endfor %}
                                        </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>

        </div>

    </div>


{% endblock %}
