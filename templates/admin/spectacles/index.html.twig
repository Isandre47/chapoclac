{% extends '/admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 d-flex justify-content-between">
                        <div class="overview-wrap">
                            <h2 class="title-1">Spectacles</h2>
                        </div>
                        <div class="container-contact100-form-btn">
                            <div class="wrap-contact100-form-btn">
                                <div class="contact100-form-bgbtn"></div>
                                <a href="{{ path('spectacles_new') }}">
                                    <button class="btn btn contact100-form-btn">{{ button_label|default('Créer un nouveau spectacle') }}</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row m-t-25">
                    <div class="col-lg-12">
                        <div class="table--no-card m-b-30">
                            <table class="table table-bordered table-striped table-hover">
                                <thead class="thead-dark">
                                <tr>
                                    <th class="text-center w-25">Affiche</th>
                                    <th class="text-center">Titre</th>
                                    <th class="text-center">Résumé</th>
                                    <th class="text-center">Comédiens</th>
                                    <th class="text-center">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for spectacle in spectacles %}
                                <tr class="accordion">
                                    <td class="text-center"><img class="img-fluid img-thumbnail sizePictureTab" src="/images/posters/{{ spectacle.poster }}" alt="{{ spectacle.poster }}"></td>
                                    <td class="text-center">{{ spectacle.title }}</td>
                                    <td class="text-center">{{ spectacle.resume }}</td>
                                    <td class="text-center" data-toggle="collapse" data-target="#collapse{{ spectacle.id }}" id="heading{{ spectacle.id }}" aria-expanded="false" aria-controls="#collapse{{ spectacle.id }}"><button  type="button" class="btn btn-default">{{ spectacle.users|length }}
                                            <br><br><span class="fas fa-search-plus text-info fa-lg pr-3 ml-3"></span></button></td>
                                    <td class="text-center">
                                        <div class="container d-flex">
                                                <a href="{{ path('spectacles_show', {'id': spectacle.id}) }}"><i class="far fa-eye fa-lg pr-3"></i></a>
                                                <a href="{{ path('spectacles_edit', {'id': spectacle.id}) }}"><i class="far fa-edit fa-lg pr-3"></i></a>
                                                <a href="{{ path('gallery_index', {'id': spectacle.id}) }}"><i class="fas fa-images fa-lg pr-3"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="5">
                                        <div id="collapse{{ spectacle.id }}" class="collapse" aria-expanded="false" aria-labelledby="heading{{ spectacle.id }}" data-parent="#accordion">
                                            <div class="row justify-content-center font-weight-bold">
                                                Comédiens participants
                                            </div>
                                            <div class="row font-weight-bold">
                                                <div class="col-6 text-center">
                                                    Prénom
                                                </div>
                                                <div class="col-6 text-center">
                                                    Nom
                                                </div>
                                            </div>
                                            <div class="row">
                                                {% for user in spectacle.users %}
                                                <div class="col-6 text-capitalize text-center">
                                                    {{ user.FirstName }}
                                                </div>
                                                <div class="col-6 text-capitalize text-center">
                                                    {{ user.LastName }}
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

