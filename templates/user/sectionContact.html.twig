{% block body %}
    <!-- Contact section -->
    <section id="contact" class="parallax-section">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">

                <div class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
                    <div class="wow fadeInUp section-title" data-wow-delay="0.3s">
                        <h2>Une question?</h2>
                        <!--<h4>we are always ready to serve you!</h4>-->
                    </div>
                    <div class="contact-form wow fadeInUp" data-wow-delay="0.7s">
                        {{ form_start(form) }}
                        {% if app.token.user == 'anon.' %}
                            <div data-valide="Votre nom">
                                {{ form_widget(form.name) }}
                                {% do form.user.setRendered %}
                            </div>
                            <div data-valide="Votre email">
                                {{ form_widget(form.email) }}
                            </div>
                            <div data-valide="Message">
                                {{ form_widget(form.message) }}
                            </div>
                        {% else %}
                            <div data-valide="Message">
                                {{ form_widget(form.message) }}
                                {% do form.name.setRendered %}
                                {% do form.email.setRendered %}
                                {% do form.user.setRendered %}
                            </div>
                        {% endif %}
                            <input type="submit" class="form-control submit" value="ENVOYER!! ">

                        {#</form>#}
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </section>

{% endblock %}