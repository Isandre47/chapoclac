{% block body %}
    <!-- Gallery section -->
    <section id="gallery" class="parallax-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
                        <div class="wow fadeInUp section-title" data-wow-delay="0.3s">
                            <h2 class="titleColor">Souvenirs</h2>
                            <h4 class="subTitle">Nostalgie</h4>
                        </div>

                    </div>
                    <!-- iso section -->
                    <div class="iso-section wow fadeInUp" data-wow-delay="0.6s">


                        <!-- iso box section -->
                        <div class="iso-box-section wow fadeInUp" data-wow-delay="0.9s">

                            <a class="iso-box-wrapper col4-iso-box">
                                <div class="row">
                                {% for gallery in galleries %}

                                    <div class="iso-box {{ gallery.spectacle.title }} col-md-4 col-sm-6">
                                        <div class="gallery-thumb">
                                            <a href="/images/gallery/{{ gallery.picture }}" data-lightbox-gallery="food-gallery">
                                                <img src="images/gallery/{{ gallery.picture }}" class="fluid-img" alt="Gallery">
                                                <div class="gallery-overlay">
                                                    <div class="gallery-item">
                                                        <i class="fa fa-search"></i>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>

                                {% endfor%}
                                </div>
                                <div class="row">
                                    <button class="boutonGallery"><a href="{{ path('remenber_section') }}">Voir toutes les photos</a></button>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}