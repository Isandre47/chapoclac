                <li><a href="{{ path('user', relative = true) }}#contact" class="smoothScroll">Contact</a></li>
                {% if app.token.user == 'anon.' %}
                    <li><a href="{{ path('app_login') }}" class="smoothScroll">Se connecter</a></li>
                    <li><a href="{{ path('app_register') }}" class="smoothScroll">S'inscrire</a></li>
                {% else %}
                    <li><a href="{{ path('userShow', {'id': app.user.id} ) }}" class="smoothScroll text-capitalize">{{ app.user.firstName }}</a></li>
                    {% for idiot in app.user.roles %}
                        {% if idiot == 'ROLE_ADMIN' %}
                            <li><a href="{{ path('admin', {'id': app.user.id} ) }}" class="smoothScroll">Admin</a></li>
                        {% endif %}
                    {% endfor %}
                    <li><a href="{{ path('app_logout')}}" class="smoothScroll">Déconnexion</a></li>
                {% endif %}
