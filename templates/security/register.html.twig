{#{% extends 'base.html.twig' %}#}

{% block title %}Register !{% endblock %}

{% block body %}
    <form method="post">

        <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        <label for="inputfirstName" class="sr-only">Nom</label>
        <input type="text" name="firstName" id="inputfirstName" class="form-control" placeholder="Nom" required autofocus>

        <label for="inputlastName" class="sr-only">Prénom</label>
        <input type="text" name="lastName" id="inputlastName" class="form-control" placeholder="Prénom" required autofocus>

        <label for="inputphoneMobil" class="sr-only">Téléphone mobile</label>
        <input type="text" name="phoneMobil" id="inputphoneMobil" class="form-control" placeholder="Téléphone mobile" required autofocus>

        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>

        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

        <button class="btn btn-lg btn-primary" type="submit">
            Register
        </button>
    </form>
{% endblock %}